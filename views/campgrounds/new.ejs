<% layout('layouts/boilerplate') %>

	<div class="row">
		<h1 class="text-center">Create New Campground</h1>
		<!-- <div class="col-6  offset-3" style="border-color: green; border-style: solid;"> -->
		<div class="col-6  offset-3">
			<form action="/campgrounds" method="POST">
				<!-- <div class="mb-3" style="border-color: blue; border-style: solid;"> -->
				<div class="mb-3">
					<label class="form-label" for="title">Campground Name:</label>
					<input class="form-control" type="text" id="title" name="title">
				</div>
				<!-- <div class="mb-3" style="border-color: blue; border-style: solid;"> -->
				<div class="mb-3">
					<label class="form-label" for="location">Campground Location:</label>
					<input class="form-control" type="text" id="location" name="location">
				</div>
				<div class="mb-3">
					<label class="form-label" for="description">Campground Description:</label>
					<textarea class="form-control" type="text" id="description" name="description"> </textarea>
				</div>
				<div class="mb-3">
					<label class="form-label" for="price">Campground Price:</label>
					<!-- <div class="input-group mb-3">
						<span class="input-group-text" id="price-label">$</span>
						<input class="form-control" type="text" id="price" name="price" aria-label="price" aria-describedby="price-label">
					</div> -->
					<div class="input-group mb-3">
						<span class="input-group-text" id="price-label">$</span>
						<input class="form-control" type="text" id="price" name="price" aria-label="price">
					</div>
				</div>
				<div class="mb-3">
					<label class="form-label" for="image">Image URL:</label>
					<input class="form-control" type="text" id="image" name="image">
				</div>
				<button class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>